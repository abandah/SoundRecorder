<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/md_blue_gray_700</item>
        <item name="android:colorPrimaryDark">@color/md_blue_gray_700</item>
        <item name="android:colorAccent">@color/md_yellow_A700</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:windowBackground">@drawable/background</item>

        <item name="android:navigationBarColor">@color/md_blue_gray_700</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:colorPrimary">@color/md_blue_gray_700</item>
        <item name="android:colorPrimaryDark">@color/md_blue_gray_700</item>
        <item name="android:colorAccent">@color/md_yellow_A700</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:windowBackground">@drawable/gradient_gray</item>

        <item name="android:navigationBarColor">@color/md_blue_gray_700</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />


    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_record_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Text.NormalLabel" parent="Text">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.SectionLabel">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="Text.Lable">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
    <style name="Widget.BorderlessButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">#414141</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/button_translucent</item>
    </style>

    <style name="Widget.RaisedButton" parent="@android:style/Widget.Material.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#414141</item>
        <item name="android:background">@drawable/raised_button_background</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_xmedium</item>
        <item name="android:paddingStart">@dimen/spacing_double</item>
        <item name="android:paddingEnd">@dimen/spacing_double</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>
</resources>